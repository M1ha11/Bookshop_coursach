<br>
<div class="columns">
  <div class="column is-2">
    <%= render "layouts/left_menu" %>
  </div>
  <hr class="vertical">
  <div class="column">
    <div class="title">
      <h1>Authors</h1>
    </div>
    <div>
      <hr>
      <br>
      <ul style="font-size:17px">
      <% Author.all.group_by(&:first).each do |frst, authors| %>
        <%= content_tag(:h2, frst)%>
        <% authors.each do |author|%>

          <li><%= link_to "#{author.fullname}", author_path(author)%></li>
        
        <% end %>
        <br>
      <% end %>
      </ul>
    </div>
  </div>
</div>

<% if admin? %>
<div class="container" style="margin-left: 100px;">
  <%= link_to 'New Author', new_author_path, class: "button is-danger is-normal is-rounded" %>
</div>
<% end %>

